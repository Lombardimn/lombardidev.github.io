---
import { getCollection } from 'astro:content';

import Layout from '@/layouts/Layout.astro';
import Contact from '@/components/globals/Contact.astro';
import WorkPreview from '@/components/globals/WorkPreview.astro';
import Hero from '@/components/globals/Hero.astro';
import Grid from '@/components/main/Grid.astro';

const projects = (await getCollection('project')).sort(
	(a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);
---

<Layout 
    title="Mis Proyectos | Lombardi Matias"
    description="Conozca los proyectos más recientes de Lombardi Matias"
>
    <section class="stack gap-20">
        <article class="wrapper stack gap-8">
            <Hero
                title="Proyectos"
                tagline="Vea mis proyectos más recientes a continuación para hacerse una idea de mi experiencia anterior."
                align="start"
            />
            <Grid variant="offset">
                {
                    projects.map((project) => (
                        <li>
                            <WorkPreview project={project} />
                        </li>
                    ))
                }
            </Grid>
        </article>
        <Contact />
    </section>
</Layout>