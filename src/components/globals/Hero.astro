---
interface Props {
    title: string,
    subtitle?: string;
    tagline?: string;
    align?: 'start'| 'center'
}

const {
    title,
    subtitle,
    tagline,
    align = 'start'
} = Astro.props
---

<article class:list={['hero stack gap-4', align]}>
    <div class="stack gap-2">
        <h1 class="title">
            <span id="span-title">
                {subtitle}
            </span>
            {title}
        </h1>
        {tagline && <p class='tagline'>{tagline}</p>}
    </div>
    <slot />
</article>

<style>
	.hero {
		font-size: var(--text-lg);
		text-align: center;
	}

	.title,
	.tagline {
		max-width: 37ch;
		margin-inline: auto;
	}

	.title {
		font-size: var(--text-3xl);
		color: var(--gray-0);
	}

    #span-title{
		opacity: 0.5;
        color: aqua;
	}

	@media (min-width: 50em) {
		.hero {
			font-size: var(--text-xl);
		}

		.start {
			text-align: start;
		}

		.start .title,
		.start .tagline {
			margin-inline: unset;
		}

		.title {
			font-size: var(--text-5xl);
		}
	}
</style>